CREATE TABLE KHUJI_LOCATION(
 id INT NOT NULL AUTO_INCREMENT,
 PRIMARY KEY(id),
 SUBAREA VARCHAR(200),
 AREA VARCHAR(200));
 
 CREATE TABLE KHUJI_COMPANY(
 id INT NOT NULL AUTO_INCREMENT,
 NAME VARCHAR(3000),
 ADDRESS_ID VARCHAR(3000),
 PRIMARY KEY (id));
 
 DROP TABLE KHUJI_COMPANY;
 
 CREATE TABLE KHUJI_COMPANY_AGENT(
 id INT NOT NULL AUTO_INCREMENT,
 PRIMARY KEY(id),
 USERNAME VARCHAR(3000),
 COMPANY_ID VARCHAR(3000),
 EMAIL_ADDRESS VARCHAR(3000));
 
 CREATE TABLE KHUJI_ADDRESS (
	id INT NOT NULL AUTO_INCREMENT,
	ADDRESS_LINE1 VARCHAR(2000),
	ADDRESS_LINE2 VARCHAR(2000),
	KHUJI_LOCATION_ID VARCHAR(3000),
	POSTCODE VARCHAR(200),
	COUNTRY VARCHAR(200),
	LAT_LONG VARCHAR(2000),
	PRIMARY KEY (id)
)

CREATE TABLE KHUJI_USER (
	username VARCHAR(200) NOT NULL,
	password VARCHAR(20),
	profile_image LONGBLOB,
	gender VARCHAR(20),
	active VARCHAR(20),
	BIRTHYEAR VARCHAR(20),
	ADDRESS_ID INT,
	FIRST_NAME VARCHAR(2000),
	LAST_NAME VARCHAR(2000),
	USER_IS_AGENT VARCHAR(20),
	PRIMARY KEY (username)
)

CREATE TABLE KHUJI_JOB_ITEM (
	id INT NOT NULL AUTO_INCREMENT,
	ADDRESS_ID VARCHAR(3000),
	JOB_TITLE VARCHAR(2000),
	JOB_ADVERTISEMENT_DATE VARCHAR (100),
	JOB_HEADER_IMAGE LONGBLOB,
	JOB_DESCRIPTION_PARTA LONGTEXT,
	JOB_DESCRIPTION_PARTB LONGTEXT,
	PRIMARY KEY (id)
)
 
CREATE TABLE KHUJI_APPLICATION (
	id INT NOT NULL AUTO_INCREMENT,
	KHUJI_JOB_ITEM_ID VARCHAR(3000),	
	KHUJI_USERNAME VARCHAR(200),
	COVER_LETTER_ATTACHMENT LONGBLOB,
	RESUME_ATTACHMENT LONGBLOB,
	PRIMARY KEY (id)
)
 